<?xml version="1.0" encoding="UTF-8"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0" name="CheckNetworkSkillConditionCondition" datamodel="cplusplus:CheckNetworkSkillDataModel:CheckNetworkSkillDataModel.h" initial="idle">
    <datamodel>
        <!-- Provided by C++ DataModel -->
        <data id="SKILL_SUCCESS" expr="0"/>
        <data id="SKILL_FAILURE" expr="1"/>
    </datamodel>
    <!-- Condition skill: TickCondition server -->
    <state id="idle">
        <transition target="levelCheck" event="CMD_TICK"/>
    </state>
    <state id="levelCheck">
        <onentry>
            <if cond="network_status">
                <send event="TICK_RESPONSE">
                    <param name="status" expr="SKILL_SUCCESS"/>
                </send>
                <else/>
                <send event="TICK_RESPONSE">
                    <param name="status" expr="SKILL_FAILURE"/>
                </send>
            </if>
        </onentry>
        <transition target="idle"/>
    </state>
</scxml>
