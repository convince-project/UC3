<?xml version="1.0" encoding="UTF-8"?>
<scxml
  xmlns="http://www.w3.org/2005/07/scxml"
  version="1.0"
  name="CheckNetworkSkillCondition"
  datamodel="cplusplus:CheckNetworkSkillDataModel:CheckNetworkSkillDataModel.h"
  initial="idle">

  <!-- Condition skill: TickCondition server -->
  <ros_service_server
    service_name="/CheckNetworkSkillCondition/tick"
    type="bt_interfaces_dummy/TickCondition"/>

  <datamodel>
    <!-- Provided by C++ DataModel -->
    <data id="SKILL_SUCCESS" type="int8" expr="0"/>
    <data id="SKILL_FAILURE" type="int8" expr="1"/>
  </datamodel>

  <state id="idle">
    <ros_service_handle_request
      name="/CheckNetworkSkillCondition/tick"
      target="levelCheck"/>
  </state>

  <state id="levelCheck">
    <onentry>
      <if cond="network_status">
        <ros_service_send_response name="/CheckNetworkSkillCondition/tick">
          <field name="status" expr="SKILL_SUCCESS"/>
        </ros_service_send_response>
      <else/>
        <ros_service_send_response name="/CheckNetworkSkillCondition/tick">
          <field name="status" expr="SKILL_FAILURE"/>
        </ros_service_send_response>
      </if>
    </onentry>
    <transition target="idle"/>
  </state>

</scxml>
